<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data>
    <record id="product_pricelist_view_form_inherit" model="ir.ui.view">
      <field name="name">product.pricelist.view.form.inherit</field>
      <field name="model">product.pricelist</field>
      <field name="inherit_id" ref="product.product_pricelist_view"/>
      <field name="arch" type="xml">
        <xpath expr="//group[@name='pricelist_discounts']" position="after">
          <group>
            <field name="display_in_products"/>
          </group>
        </xpath>
      </field>
    </record>
  </data>
</odoo>
